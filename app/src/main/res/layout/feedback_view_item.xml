<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/bg_type_10"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/maulim_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maulim Name"
            android:textSize="19sp"
            android:textStyle="bold"
            android:background="@drawable/bg_type_7"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/feedback_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feedback Text....."
            android:padding="10dp"/>
        <RatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="1"
            android:progressBackgroundTint="#A8A8A8"
            android:layout_gravity="center"
            android:secondaryProgressTint="@color/colorYellowLight"
            android:indeterminateTint="@color/colorYellowLight"
            android:progressTint="@color/colorYellowLight"
            android:numStars="5"
            android:isIndicator="true"
            android:stepSize="0.01"/>
    </LinearLayout>
</LinearLayout>