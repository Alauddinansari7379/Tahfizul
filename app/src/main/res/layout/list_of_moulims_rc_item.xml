<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLy"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/round_corner_ractangle_bg"
        android:backgroundTint="#79BBBBBB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImg"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_70sdp"
        android:background="@drawable/white_stroke"
        android:padding="@dimen/_2sdp"
        android:src="@drawable/moulim"
        app:layout_constraintBottom_toBottomOf="@+id/mainLy"
        app:layout_constraintStart_toStartOf="@+id/mainLy"
        app:layout_constraintTop_toTopOf="@+id/mainLy" />

    <TextView
        android:id="@+id/moulimNamelb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="Moulna Ibrahim"
        android:textColor="@color/colorDarkBlack"
        android:textSize="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="@+id/mainLy"
        app:layout_constraintEnd_toStartOf="@+id/forwardBtn"
        app:layout_constraintStart_toEndOf="@+id/profileImg"
        app:layout_constraintTop_toTopOf="@+id/mainLy" />

    <ImageView
        android:id="@+id/forwardBtn"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_10sdp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="@+id/mainLy"
        app:layout_constraintEnd_toEndOf="@+id/mainLy"
        app:layout_constraintTop_toTopOf="@+id/mainLy"
        app:tint="@color/color_10" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>