<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/assign_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_type_8"
        android:layout_margin="15dp"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/assignment_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ASSIGNMENTS-3"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PARA 1, RUKU 3"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="August 12, 2020"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aftab Alam"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/desc_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dummy_txt_1"
            android:textStyle="normal"
            android:textSize="21sp"
            android:textColor="@color/white"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/name_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Aftab Alam"
                android:textStyle="normal"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:id="@+id/assign_type_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:id="@+id/assign_status_txt"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Aftab Alam"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:id="@+id/assign_date"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="12-01-2022"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="13sp"
                android:textColor="@color/white"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>